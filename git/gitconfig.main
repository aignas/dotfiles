[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto
    ui = true

[push]
    default = matching

[core]
    editor = nvim
    whitespace = fix,-indent-with-non-tab,trailing-space

[diff]
    tool = nvimdiff
    algorithm = patience

[difftool]
    prompt = false

[alias]
    aa = add -A
    au = add -u
    br = branch
    ca = commit --amend --no-edit
    cc = commit
    co = checkout
    st = status

# vim: ft=gitconfig
