[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto
    ui = true

[push]
    default = matching

[core]
    editor = nvim
    whitespace = fix,-indent-with-non-tab,trailing-space
	fsmonitor = rs-git-fsmonitor

[diff]
    tool = nvimdiff
    algorithm = patience

[difftool]
    prompt = false

[alias]
    aa = add -A
    au = add -u
    br = branch
    ca = commit --amend --no-edit
    cc = commit
    cm = commit -a
    co = checkout
    st = status

[init]
    templatedir = /home/aignas/.git-template-with-git-hooks

