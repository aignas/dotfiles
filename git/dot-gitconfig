# vim: ft=gitconfig

[user]
    name = Ignas Anikevicius

[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto
    ui = true

[push]
    default = current

[pull]
    ff = only

[core]
    whitespace = fix,-indent-with-non-tab,trailing-space

[diff]
    algorithm = patience

[difftool]
    prompt = false

[alias]
    aa = add -A
    au = add -u
    br = branch
    ca = commit --amend --no-edit
    cc = commit
    cm = commit -a
    co = checkout
    st = status

[init]
    templatedir = /Users/aignas/.git-template-with-git-hooks
    defaultBranch = main

[include]
    path = .gitconfig.local

[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
