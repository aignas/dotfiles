#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.
export ZSH_DOTFILES=$HOME/.dotfiles
export ZSH_DOTFILES_OS="Unknown"
_OS=`uname -s`
if [[ ${_OS} == "Darwin" ]]; then
    ZSH_DOTFILES_OS="Mac"
elif [[ ${_OS} == "Linux" && -f /etc/arch-release ]]; then
    ZSH_DOTFILES_OS="ArchLinux"
elif [[ ${_OS} == "Linux" && -f /etc/ubuntu-release ]]; then
    ZSH_DOTFILES_OS="Debian"
elif [[ ${_OS} == "Linux" ]]; then
    ZSH_DOTFILES_OS="GenericLinux"
fi
