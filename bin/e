#!/bin/bash

readonly bg=$(grep "background" "${HOME}/.config/alacritty/alacritty.yml")

if [[ -n ${TMUX} ]]; then
    export TERM=tmux-256color
fi

if [[ $bg == "    background: '#3a3a3a'" ]]; then
    exec env "$EDITOR" --cmd "let theme = 'dark'" $@
fi

exec env "$EDITOR" --cmd "let theme = 'light'" $@
