#!/bin/sh
set -euo pipefail

cd "${HOME}/.dotfiles"

stow --dotfiles -R stow "$@"

echo "stow: bin"
mkdir -p "${HOME}/bin"
stow \
    --target="${HOME}/bin" \
    -R bin \
    "$@"

echo "stow: dotfiles"
stow --dotfiles \
    --target="${HOME}" \
    -R git \
    -R tmux \
    -R zsh \
    "$@"

echo "stow: XDG config"
stow --dotfiles \
    --target="${XDG_CONFIG_HOME:-${HOME}/.config}" \
    -R alacritty \
    -R neovim \
    "$@"
