#!/bin/bash
set -euo pipefail

cd "${HOME}/.dotfiles"

_stow() {
    stow -v --ignore=install.sh "$@"
    #stow "$@" 2>/dev/null
}

if [[ "$(_stow -V)" =~ "2.2.2" ]]; then
    echo "stow: legacy"
    pushd legacy
    ./refresh.sh
    popd

    _stow \
        --target="${HOME}" \
        -R legacy \
        "$@"
else
    _stow --dotfiles -R stow "$@"

    echo "stow: dotfiles"
    _stow --dotfiles \
        --target="${HOME}" \
        -R git \
        -R tmux \
        -R zsh \
        "$@"
fi

echo "stow: bin"
mkdir -p "${HOME}/bin"
_stow \
    --target="${HOME}/bin" \
    -R bin \
    "$@"

echo "stow: XDG config"
_stow \
    --target="${XDG_CONFIG_HOME:-${HOME}/.config}" \
    -R alacritty \
    -R lf \
    -R neovim \
    -R pacman \
    -R qutebrowser \
    -R spotify \
    -R sway \
    -R yabai \
    "$@"

echo "stow: aerc config"
_stow \
    --target="${XDG_CONFIG_HOME:-${HOME}/.config}/aerc" \
    -R aerc \
    "$@"
